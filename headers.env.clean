# Logging for the MCP server
LOG_LEVEL=debug

# Notion API access for the official MCP server
NOTION_TOKEN=your_notion_token_here
NOTION_VERSION=2022-06-28

# Internal auth token for the MCP HTTP transport
MCP_AUTH=your_mcp_secret_here

# Router config
ROUTER_PORT=3032
ROUTER_LOG_LEVEL=info
ROUTER_API_KEY=your_router_api_key_here

# If your router also needs to call MCP with auth:
MCP_BASE_URL=http://notion_mcp:3030
